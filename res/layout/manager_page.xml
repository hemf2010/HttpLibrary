<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/study_bg">
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="83dp"
	    android:background="@drawable/top_person_center">
	    <Button 
	        android:id="@+id/back_home"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_home_page"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="30dp"
	        android:layout_centerVertical="true"/>
	    <Button 
	        android:id="@+id/upload_res"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@+id/back_home"
	        android:layout_alignParentBottom="true"
	        android:layout_marginRight="285dp"
	        android:background="@drawable/btn_top"
	        android:text="上      传"
	        android:textSize="25sp"
	        android:textColor="@android:color/white"/>
	    <Button 
	        android:id="@+id/score_manager"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@+id/upload_res"
	        android:layout_alignParentBottom="true"
	        android:layout_marginRight="10dp"
	        android:background="@drawable/btn_top"
	        android:text="评分管理"
	        android:textSize="25sp"
	        android:textColor="@android:color/white"/>
	    
	    <Button 
	        android:id="@+id/share_manager"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@+id/score_manager"
	        android:layout_alignParentBottom="true"
	        android:layout_marginRight="8dp"
	        android:background="@drawable/btn_top"
	        android:text="分享管理"
	        android:textSize="25sp"
	        android:textColor="@android:color/white"/>
	    <Button 
	        android:id="@+id/msg_manager"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@+id/share_manager"
	        android:layout_alignParentBottom="true"
	        android:layout_marginRight="10dp"
	        android:background="@drawable/btn_top"
	        android:text="消息管理"
	        android:textSize="25sp"
	        android:textColor="@android:color/white"/>
	    <TextView
	        android:id="@+id/wel_students"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/back_home"
	        android:layout_marginRight="112dp"
	        android:layout_toLeftOf="@+id/back_home"
	        android:text="欢迎您，曹操同学！"
	        android:textColor="@android:color/white"
	        android:textSize="16sp" />
	    <TextView
	        android:id="@+id/wel_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/wel_students"
	        android:layout_alignLeft="@+id/wel_students"
	        android:text="PM 4:30"
	        android:textColor="@android:color/white"
	        android:textSize="16sp" />

	    <TextView
	        android:id="@+id/news_hint"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/wel_time"
	        android:layout_alignRight="@+id/msg_manager"
	        android:background="@drawable/news_hint"
	        android:gravity="center"
	        android:text="20"
	        android:textColor="@android:color/white"
	        android:textSize="10sp" />

	</RelativeLayout>
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/bg_person_center"
	    android:layout_marginLeft="30dp"
	    android:layout_marginRight="30dp"
	    >
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:paddingLeft="8dp"
	        >
	        <Button 
	            android:id="@+id/profile"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/btn_management"
	            android:drawableLeft="@drawable/ic_material"
	            android:paddingLeft="30dp"
	            android:layout_marginTop="2dp"
	            android:layout_marginBottom="2dp"
	            android:clickable="true"
	            android:gravity="center"
	            android:text="个人资料"
	            android:textColor="#000000"
	            android:textSize="20sp"/>
	        <Button 
	            android:id="@+id/modify_password"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/btn_management"
	            android:drawableLeft="@drawable/ic_password"
	            android:paddingLeft="30dp"
	            android:clickable="true"
	            android:gravity="center"
	            android:text="修改密码"
	            android:textColor="#000000"
	            android:textSize="20sp"/>
	        <Button 
	            android:id="@+id/upload_avator"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/btn_management"
	            android:drawableLeft="@drawable/ic_head"
	            android:paddingLeft="30dp"
	            android:clickable="true"
	            android:gravity="center"
	            android:text="上传头像"
	            android:textColor="#000000"
	            android:textSize="20sp"/>
	        <Button 
	            android:id="@+id/my_friends"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/btn_management"
	            android:drawableLeft="@drawable/ic_friends"
	            android:paddingLeft="30dp"
	            android:clickable="true"
	            android:gravity="center"
	            android:text="我的好友"
	            android:textColor="#000000"
	            android:textSize="20sp"/>
	        <Button 
	            android:id="@+id/my_remind"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/btn_management"
	            android:drawableLeft="@drawable/ic_remind"
	            android:paddingLeft="30dp"
	            android:clickable="true"
	            android:gravity="center"
	            android:text="我的提醒"
	            android:textColor="#000000"
	            android:textSize="20sp"/>
	        <Button 
	            android:id="@+id/my_files"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/btn_management"
	            android:drawableLeft="@drawable/ic_file"
	            android:paddingLeft="30dp"
	            android:clickable="true"
	            android:gravity="center"
	            android:text="我的文件"
	            android:textColor="#000000"
	            android:textSize="20sp"/>
	        
	        <Button 
	            android:id="@+id/my_integral"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/btn_management"
	            android:drawableLeft="@drawable/ic_integral"
	            android:paddingLeft="30dp"
	            android:clickable="true"
	            android:gravity="center"
	            android:text="我的积分"
	            android:textColor="#000000"
	            android:textSize="20sp"/>
	        <Button 
	            android:id="@+id/my_fav"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/btn_management"
	            android:drawableLeft="@drawable/ic_collectio"
	            android:paddingLeft="30dp"
	            android:clickable="true"
	            android:gravity="center"
	            android:text="我的收藏"
	            android:textColor="#000000"
	            android:textSize="20sp"/>
	        <Button 
	            android:id="@+id/sys_center"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/btn_management"
	            android:drawableLeft="@drawable/ic_system"
	            android:paddingLeft="30dp"
	            android:clickable="true"
	            android:gravity="center"
	            android:text="系统中心"
	            android:textColor="#000000"
	            android:textSize="20sp"/>
	        <Button 
	            android:id="@+id/my_settings"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/btn_management"
	            android:drawableLeft="@drawable/ic_set"
	            android:paddingLeft="30dp"
	            android:clickable="true"
	            android:gravity="center"
	            android:text="个性设置"
	            android:textColor="#000000"
	            android:textSize="20sp"/>
	    </LinearLayout>
	</RelativeLayout>

</LinearLayout>
